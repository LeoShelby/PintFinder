<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:gravity="center|top"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#FFEB3B"
        android:backgroundTint="#FCEC35"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            tools:context=".BeerDescriptionActivity">


            <ImageView
                android:id="@+id/imageBeer"
                android:layout_width="139dp"
                android:layout_height="130dp"
                android:background="#FCEC35"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/nameBeer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FCEC35"
                android:gravity="center"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintStart_toEndOf="@+id/imageBeer"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/priceBeer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#FF6F6F6F"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nameBeer"
                app:layout_constraintStart_toEndOf="@+id/imageBeer"
                app:layout_constraintTop_toBottomOf="@+id/nameBeer" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#FCEC35"
        android:backgroundTint="#FCEC35"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            tools:context=".BeerDescriptionActivity">


            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="390dp"
                android:layout_height="72dp"
                android:background="#FCEC35"
                android:gravity="center"
                android:paddingLeft="40sp"
                android:text="Description:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCEC35"
                android:paddingLeft="10sp"
                android:paddingTop="15sp"
                android:paddingRight="10sp"
                android:paddingBottom="15sp"
                android:text="TextView"
                android:textColor="#6F6F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionLabel" />

        </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/delete_beer_from_menu"
        android:layout_width="312dp"
        android:layout_height="53dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/btn_rounded"
        android:text="Delete Beer"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_gravity="center"/>



</LinearLayout>